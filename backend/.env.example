# Choseby Healthcare Platform - Environment Configuration
# Copy to .env and update values for your deployment

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[password]@db.qrfsbisetvlpyyokylem.supabase.co:5432/postgres?sslmode=require

# Environment
ENVIRONMENT=production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-at-least-32-characters
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=2592000

# Server Configuration
PORT=8080
GIN_MODE=release

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.vercel.app,http://localhost:3000

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60

# Healthcare SSO Configuration (Optional)
EPIC_CLIENT_ID=your-epic-client-id
EPIC_CLIENT_SECRET=your-epic-client-secret
EPIC_REDIRECT_URI=https://your-backend-domain/api/v1/auth/sso/epic/callback

CERNER_CLIENT_ID=your-cerner-client-id
CERNER_CLIENT_SECRET=your-cerner-client-secret
CERNER_REDIRECT_URI=https://your-backend-domain/api/v1/auth/sso/cerner/callback