# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
DATABASE_POOL_SIZE=20

# JWT Authentication (REQUIRED - Generate with: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_MINIMUM_32_CHARACTERS
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800

# AI Integration (DeepSeek API for customer issue classification)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com/v1
AI_REQUEST_TIMEOUT=30

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=3600
CORS_ORIGINS=http://localhost:3000,https://choseby.vercel.app

# Customer Response Platform Settings
MAX_TEAM_MEMBERS=25
MAX_DECISIONS_PER_TEAM=100
EVALUATION_TIMEOUT_HOURS=72

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30000

# Server
PORT=8080
GIN_MODE=debug
ENVIRONMENT=development